<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_fina_lecture_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="0dp">

    <ImageView
        android:src="@drawable/recycler_view_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/card_background_description"/>

    <TextView
        android:id="@+id/text_fina_lecture_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingVertical="16dp"
        android:paddingEnd="@dimen/text_padding"
        android:paddingStart="32dp"
        android:scrollHorizontally="true"
        tools:text="@string/l1"
        android:fontFamily="@font/aref_ruqaa_bold"/>
</com.google.android.material.card.MaterialCardView>